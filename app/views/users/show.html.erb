<%= link_to "Create Ticket", new_user_ticket_path(current_user.id) %>

<h1>My Tickets</h1>
    <ul>
        <% if current_user.tickets.empty? %>
            <p>No Open Tickets </p>
        <% end %>
    <% current_user.tickets.each do |ticket| %>
        <% if ticket.is_resolved %>
            <p><%= ticket.description %> - Resolved</p>
        <% end %>
        <p><%= link_to ticket.description, ticket_path(ticket.id) %></p>
    <% end %>
        